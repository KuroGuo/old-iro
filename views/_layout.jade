doctype html
html
  head
    include ./partials/head
    link(rel='stylesheet', href='/static/stylesheets/dist/core.css')
    block head

  body
    include ./partials/browser_too_old.jade
    header#header
      .container
        h1: a(href='/', target='_self', title='iro | colorful')
        nav#nav
          ul
            li: a(href='/l', target='_self') 列表
            li: a(href='/about', target='_self') 关于
            if user
              li: a(href='/logout', target='_self') 退出
            else
              li: a(href='/login', target='_self') 登录

    #main
      block main

    footer#footer

    #navigitor
      .inner(v-show='navigitorShow', v-transition='show')
        .button.top(title='返回顶部', v-on='click: top')
          .text TOP
        if current === 'home'
          .button.pre(title='上一条', v-on='click: pre')
            .text.iconfont.icon-chevron-up
          .button.next(title='下一条', v-on='click: next')
            .text.iconfont.icon-chevron-down

    script(src='/static/components/require/require.js')
    script(src='/static/scripts/dist/config.js')
    block scripts
